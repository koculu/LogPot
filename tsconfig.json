{
    "compilerOptions": {
        "outDir": "dist/js",
        "declarationDir": "dist/types",
        "declaration": true,
        "noEmit": true,
        "target": "ESNext",
        "module": "esnext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "noImplicitOverride": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "composite": true,
        "rootDir": "./",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable",
        ],
        "baseUrl": ".",
        "paths": {
            "@logpot/*": [
                "packages/*/src"
            ]
        },
    },
    "include": [
        "./packages/*/src",
    ]
}